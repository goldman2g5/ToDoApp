<MudDialog>
    <DialogContent>
        <MudTextField T="string" @ref="JoinCodeField" Label="Invitation Code"></MudTextField>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    MudForm form;
    MudTextField<string> JoinCodeField;
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(JoinCodeField.Value));
    void Cancel() => MudDialog.Cancel();
}